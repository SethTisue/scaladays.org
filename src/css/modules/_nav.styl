.main-nav
	display: none
	position: fixed
	background-color: rgba(scala-red, 1)
	border: 1px solid white
	top: 2rem
	right: 2rem
	padding: 1rem 0 .5rem 0
	border-radius: 0px
	z-index: 999

	a
		color: white
		display: block
		line-height: 1.1
		font-size: 0.938rem
		padding: .375rem 1rem
		font-weight: 700
		&:hover
			color: scala-blue
		&.highlight
			border 2px solid white
			border-radius: 0px
			padding: .875rem 0rem
			background-color: darken(scala-red, 12)
			text-align: center
			text-transform: uppercase
			margin: 1rem 1rem .5rem 1rem
			font-size: .875rem
			transition: background-color .25s ease-out
			&:hover
				background-color: darken(scala-red, 20)
				color: white
				transition: background-color .25s ease-out
		.logo
			max-width: 80%
			
			
			
	@media largeOn
		display: block
.menu-button
	position: fixed
	z-index: 99999
	top: 1rem
	right: 1rem
	width: 60px
	height: 60px
	border: 1px solid white
	@media largeOn
		display: none
.off-canvas
	background-color: scala-slate
	a
		border-bottom: 1px solid lighten(scala-slate, 10)
		&:hover
			color: scala-blue
		&:first-child
			border-bottom: none
			margin-bottom: 1rem
	a:focus
		outline: none
	.logo
		max-width: 80%

.main-nav-off-canvas
	padding: 1rem
	a
		color: white
		display: block
		line-height: 1.6
		font-size: 1.375rem