.button, a.button, button
	background: scala-red
	border-radius: 0px
	border: 1px solid rgba(white, 1)
	padding: 1rem 1.125rem
	width: 100%
	font-weight: 700
	font-size: .875rem
	color: white
	transition: background-color .25s ease-out
	@media mediumOn
		width: auto
	&:hover
		border: 1px solid rgba(white, 1)
		background-color: darken(scala-red, 12)
		color: white
		transition: background-color .25s ease-out
	.scala-red &, &.mktoButton
		background: darken(scala-red, 12)
		&:hover
			background-color: darken(scala-red, 20)
	.scala-blue &
		background: scala-red
		&:hover
			background-color: darken(scala-red, 12)
	.scala-slate &
		background: scala-blue
		&:hover
			background-color: darken(scala-blue, 12)