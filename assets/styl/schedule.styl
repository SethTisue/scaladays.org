#rooms
	background: white-ltr
	height: 50px
	line-height: 50px
	padding: 0 350px 0 0
	position: absolute
	top: 80px
	width: 100%
	z-index: 1111
	&.fixed
		position: fixed
		top: 0
	&.after
		top: auto
		bottom: 60px
	.wrapper
		height: 50px
		position: relative
		z-index: 1
	span
		display: block
		position: absolute
		top: 0
		left: 0
		width: 25%
		height: inherit
		background: white
		transition: all 200ms ease-in-out
		&:before
			content: ""
			left: 10px
			position: absolute
			font-weight: 700
			color: red
		&:after
			content: ""
			right: 10px
			position: absolute
			font-weight: 700
			color: red
		@media (min-width: 961px)
			width: 50%
		@media (min-width: 1201px)
			width: 75%
		@media (min-width: 1441px)
			width: 100%
		.off-1 &
			left: 25%
		.off-2 &
			left: 50%
		.off-3 &
			left: 75%
	ul
		position: relative
		z-index: 3
	li
		position: relative
		width: 25%
		text-align: center
		float: left
		z-index: 1
		text-transform: uppercase
		font-weight: 700
		cursor: pointer
		color: slate

#schedule #details
	position: fixed
	top: 0
	right: 0
	bottom: 0
	left: 0
	overflow: auto
	font-size: 16px
	background: slate
	z-index: 11111
	display: none
	padding: 80px
	color: white
	cursor: pointer
	.details-hide
		display: none
	.close
		position: absolute
		top: 80px
		right: 80px
		cursor: pointer
		font-size: 30px
		font-weight: 200
		text-transform: uppercase
	#content 
		max-width: 600px
		h3
			color: blue
			padding: 0
			line-height: 33px
			font-size: 30px
			margin: 0 0 20px 0
		h4
			color: blue
			margin: 20px 0 0 0
			font-size: 18px
		p
			margin-top: 0
		.date
			color: red
			font-weight: 700
			margin: 0 0 5px 0
		a 
			color: red-text
		ul 
			margin-bottom: 10px
			padding-left: 10px
			li
				list-style-type: disc
				list-style-position: inside
		
		.speaker
			&:after
				content: ' '
				display: block
				clear: both
			li
				padding-bottom: 10px 
				clear: both
				display: block
				
				img
					border-radius: 200px
					border: 5px solid white-ltr
					width: 17%
					float: left
					margin-right: 3%
				> span
					float: left
					width: 80%
					padding-top: 5px
					font-size: 20px
					h4
						margin: 10px 0 0 0
						font-size: 18px
					p
						font-size: 16px



#schedule
	padding: 0
	position: relative
	font-size: 14px
	overflow: hidden

	&:after
		content: " "
		position: absolute
		top: 87px
		right: 0
		bottom: 0
		width 350px
		background: rgba(blue-ltr, .8)

	h1
		padding: 0 80px
		height: 80px
		line-height: 80px
		margin-bottom: 50px
		font-size: header-size

	h2
		color: white
		line-height: 60px
		margin: 0
		font-size: 20px
		text-align: left

	h3
		color: white
		line-height: 20px
		font-size: 20px
		margin: 5px 0
	a:hover
		text-decoration: underline
		color: red-text

	.day 
		position: relative

		header 
			position: absolute
			top: 0
			width: 100%
			padding: 0 80px
			height: 60px
			background: red
			color: white
			z-index: 999
			transform: translate3d(0,0,0)
			box-shadow: 0 4px rgba(0,0,0,.1)

			&.fixed 
				position: fixed
				top: 50px
				width: 100%

			&.after
				position: absolute
				bottom: 0px
				top: auto

	aside 
		position: absolute
		top: 60px
		left: 0
		bottom: 0
		width: 150px
		background: rgba(blue-ltr, .8) url('../images/time-schedule.png') right 0 repeat-y
		z-index: 99
		text-align: right

		.time 
			color: navy
			position: absolute
			right: 0px
			font-weight: 900
			font-size: 20px
			margin-top: -1px
			border-top: 2px solid rgba(blue-text, 0.2)
			width: 100%
			padding: 5px 20px 0 0
			&:first-child
				border: none

	.tracks
		position: absolute
		top: 60px
		right: 350px
		bottom: 0
		left: 151px

		> div
			position: absolute
			padding: 5px 8px
			border: 1px solid blue-dkr

		.speaker
			display: block
			white-space: nowrap
			overflow: hidden
			text-overflow: ellipsis
			font-weight: 400
			color: white
		
		.speakersbio 
			display: block
			color: #8a2420
			-webkit-transition: all 200ms ease-in-out
			white-space: nowrap
			overflow: hidden
			text-overflow: ellipsis
		    padding-top: 5px
			margin-right: 70px
		.pause
			width: 100%
			h3
				float: left
				margin-right: 2%
				span
					font-size: 14px
			
			&.register
				margin-top: -45px
				
			.svg-icon-registration
				width: 51px
				height: 60px
			.svg-icon-drink
				width: 80px
				height: 49px
			.svg-icon-eat
				width: 60px
				height: 41px
	.keynote 
		background: slate-ltr
		color: grey-ltr
		width: 100%
		cursor: pointer
		@media (max-width: 1440px)
			width: 133.3333%
		@media (max-width: 1200px)
			width: 200%
		h3
			color: red
			font-size: 26px
			margin-bottom: 0.4em
		h4
			color: white
		.details
			display: none
		.speaker
			&:after
				content: ' '
				display: block
				clear: both
			li
				padding-bottom: 10px 
				clear: both
				display: block
				height: 50px
				line-height: 40px
			img
				border-radius: 200px
				border: 2px solid white-ltr
				height: 60px
				float: left
				margin-right: 10px


	.track 
		width: 25%
		transition: all 200ms ease-in-out
		background: blue
		color: white-ltr
		cursor: pointer
		overflow: hidden
		.details 
			display: none
		h3
			font-size: 15px
			line-height: 18px
			color: navy
			margin-top: 2px
			margin-bottom: 2px
			a 
				text-decoration: none
				color: inherit
				&:after
					display: block
					content: " "
					position: absolute
					top: 0
					left: 0
					right: 0
					bottom: 0
		ul.speaker
			img
				display: none
			a 
				position: relative
				z-index: 99
		@media (max-width: 1440px)
			width: 33.3333%
		@media (max-width: 1200px)
			width: 50%
		@media (max-width: 960px)
			width: 100%
		&:hover
			background: slate
			color: white-ltr
			h3 
				color: blue
			&:before
				color: white-ltr
		&:before
			color: rgba(navy,0.5)
			font-weight: 700
			text-transform: uppercase
			font-size: 11px
			margin: 0
			
	.track.track1 
		left: 0
		&:before
			content: "room 1"
			
	.track.track2 
		left: 25%
		&:before
			content: "room 2"

	.track.track3 
		left: 50%
		&:before
			content: "room 3"

	.track.track4
		left: 75%
		&:before
			content: "room 4"

	@media (max-width: 1440px)
		.track.track1 
			left: 0
		.track.track2 
			left: 33.3333%
		.track.track3 
			left: 66.6666%
		.track.track4
			left: 100%
	@media (max-width: 1200px)
		.track.track1 
			left: 0
		.track.track2 
			left: 50%
		.track.track3 
			left: 100%
		.track.track4
			left: 150%
	@media (max-width: 960px)
		.track.track1 
			left: 0
		.track.track2 
			left: 100%
		.track.track3 
			left: 200%
		.track.track4
			left: 300%

	&.off-1
		.track
			transform: translateX(-100%)
	&.off-2
		.track
			transform: translateX(-200%)
	&.off-3
		.track
			transform: translateX(-300%)


	

